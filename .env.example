# Archer Voice Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development | staging | production

# ============================================
# Database - PostgreSQL
# ============================================
DATABASE_URL=postgresql+asyncpg://archer:archer_dev_pass@localhost:5432/archer_dev

# ============================================
# Redis - Cache and Session Store
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Cartesia Line SDK
# ============================================
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_MODEL=sonic  # or sonic-english
CARTESIA_VOICE_ID=your_voice_id_here

# ============================================
# Twilio - Voice/SMS
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# OpenAI - Negotiation Guidance (Phase 2)
# ============================================
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# SMS Service (for payment links)
# ============================================
SMS_PAYMENT_LINK_TEMPLATE=https://pay.archer.ai/{payment_token}

# ============================================
# Security
# ============================================
API_SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# ============================================
# CORS - Frontend Origins
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json  # json | text

# ============================================
# Feature Flags (Phase 0/1)
# ============================================
ENABLE_REAL_CALLS=false  # Enable actual Twilio calls
ENABLE_SIMULATOR=true    # Enable test call simulator
ENABLE_RECORDING=true    # Record calls for quality review

# ============================================
# Phase 1 Defaults
# ============================================
DEFAULT_LANGUAGE=en
DEFAULT_VOICE=professional  # professional | friendly | firm
MAX_CALL_DURATION_SECONDS=600  # 10 minutes
